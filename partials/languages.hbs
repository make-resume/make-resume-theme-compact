{{#if languages}}
{{#>section title="Languages"}}
	<div class="columns is-multiline is-gapless">
		{{#each languages}}
		<div class="column is-3 item">
			<h5 class="skill__title">{{this.language}}</h5>
			<p class="is-italic has-text-grey">{{this.fluency}}</p>
		</div>
		{{/each}}
	</div>
{{/section}}
{{/if}}