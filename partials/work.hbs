{{#if work}}
{{#>section title="Work Experience"}}
	{{#each work}}
	<div class="item">
		<div class="item__head">
			<h4 class="item__title">
				{{this.position}}
			</h4>
			<h5 class="item__subtitle">
				{{this.company}}
			</h5>
			<h5 class="item__subtle">
				{{this.startDate}} â”€ {{this.endDate}}
			</h5>
		</div>
		<div class="item__content">
			{{#if this.summary}}
			<p>
				{{this.summary}}
				{{#if this.website}}
				<br />
				<a href="{{this.website}}" target="_blank">{{this.website}}</a>
				{{/if}}
			</p>
			{{/if}}
			{{#if this.highlights}}
			<ul>
				{{#each this.highlights}}
				<li>{{this}}</li>
				{{/each}}
			</ul>
			{{/if}}
		</div>
	</div>
	{{/each}}
{{/section}}
{{/if}}